{
  "name": "react-native-photo-manipulator",
  "version": "1.6.0",
  "description": "React Native Image Processing API to edit photo programmatically for Android and iOS.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "source": "src/index.ts",
  "author": "Woraphot Chokratanasombat <guhungry@gmail.com>",
  "scripts": {
    "ci": "CI=true && yarn lint && yarn test",
    "lint": "yarn tsc --noEmit && yarn eslint ./src --ext .ts,.tsx",
    "build": "yarn tsc",
    "prepack": "bob build",
    "test": "yarn jest src"
  },
  "peerDependencies": {
    "react": ">=16.0",
    "react-native": ">=0.60"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "0.74.85",
    "@react-native/eslint-config": "0.74.85",
    "@react-native/metro-config": "0.74.85",
    "@react-native/typescript-config": "0.74.85",
    "@types/jest": "^29",
    "@types/parse-color": "^1.0.0",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.6.3",
    "eslint": "^8.19.0",
    "jest": "^29",
    "jest-extended": "^4.0",
    "prettier": "2.8.8",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-builder-bob": "^0.23.2",
    "react-test-renderer": "18.2.0",
    "typescript": "5.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guhungry/react-native-photo-manipulator.git"
  },
  "keywords": [
    "react-native",
    "react native",
    "image editor",
    "image processing",
    "photo editor",
    "photo manipulator"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/guhungry/react-native-photo-manipulator/issues"
  },
  "homepage": "https://github.com/guhungry/react-native-photo-manipulator#readme",
  "files": [
    "android",
    "ios",
    "lib",
    "src",
    "react-native-photo-manipulator.podspec",
    "!/**/__tests__"
  ],
  "dependencies": {
    "parse-color": "^1.0.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "codegenConfig": {
    "name": "RNPhotoManipulatorSpec",
    "type": "modules",
    "jsSrcsDir": "./src",
    "android": {
      "javaPackageName": "com.guhungry.rnphotomanipulator"
    }
  }
}
